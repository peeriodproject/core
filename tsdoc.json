{
	"tags": {
		"allowUnknownTags" : true
	},
    "plugins": [
        "plugins/markdown",
        "/usr/local/lib/node_modules/tsdoc/template/plugins/TSDoc.js"
    ],
	"opts": {
		"template"	: "./vendor/docstrap/template",
		"recurse"	: true,
        "private": true,
        "explain": false
    },
	"templates" : {
		"cleverLinks"     : true,
		"monospaceLinks"  : false
	},
	"source": {
		"includePattern": "(\\.d)?\\.ts$"
	},
	"markdown"  : {
        "parser"   : "gfm",
        "hardwrap" : true
    },
	"tsdoc":{
		"source"		: "./src",
		"destination"	: "./docs",
		"tutorials"		: "",
		"systemName"	: "git_app",
		"footer"		: "",
		"copyright"		: "git_app Copyright Â© 2014 joernroeder.",
		"outputSourceFiles" : true,
		"commentsOnly": true
	}
}