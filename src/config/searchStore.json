{
    "index": {
        "number_of_shards"  : 1,
        "number_of_replicas": 0
    },
    "node"     : {
        "local": true
    },
    "network": {
        "host": "127.0.0.1"
    },
    "discovery": {
        "zen": {
            "ping": {
                "multicast": {
                    "enabled": false
                },
                "unicast"  : {
                    "hosts": ["localhost"]
                }
            }
        }
    },
    "plugin": {
        "mandatory": "mapper-attachments"
    }
}